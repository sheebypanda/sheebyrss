<div class="card-columns">
  <% @articles.each do |article| %>

      <div class="card ">
        <div class="card-block">
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">
              <%= link_to icon('close', class: "text-danger") , article.source ,
                method: :delete,
                data: { confirm: "Are you sure to delete this source ?" } %>
            </span>
          </button>
          <a href="<%= article.url %>" class="card-title">
            <h4><%= article.title %></h4>
          </a>
          <p class="card-text"><%= article.excerpt %></p>
          <% now = DateTime.now
             pubdate = DateTime.parse(article.pub_date.to_s)
             time = (now - pubdate).to_i
             if time == 0
               day = " Today"
             elsif time == 1
               day = " Yesterday"
             else
               day = time.to_s + " days"
             end
          %>
          <p class="card-text float-xs-left"><small class="text-muted"><%= day %></small></p>
          <p class="card-text float-xs-right"><small class="text-muted"><%= article.source.name %></small></p>
        </div>
      </div>

  <% end %>
</div>
