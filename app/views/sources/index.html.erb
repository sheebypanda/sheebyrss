<div class="card-columns">
  <% @articles.each do |article| %>

      <div class="card ">
        <div class="card-block">
          <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">
              <%= link_to icon('close', class: "text-danger") , article.source ,
                method: :delete,
                data: { confirm: "Are you sure to delete this source ?" } %>
            </span>
          </button>
          <a href="<%= article.url %>" class="card-title">
            <h4><%= article.title %></h4>
          </a>
          <p class="card-text"><%= article.excerpt %></p>
          <p class="card-text float-xs-left"><small class="text-muted"><%= article.pub_date %></small></p>
          <p class="card-text float-xs-right"><small class="text-muted"><%= article.source.url %></small></p>
        </div>
      </div>

  <% end %>
</div>
